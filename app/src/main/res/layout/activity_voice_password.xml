<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoicePassword"
    android:orientation="vertical"
    android:background="@drawable/bg3">

    <TextView
        android:id="@+id/txtlabel"
        android:text="Create New Voice Password Now"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"/>


    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="75dp"
        android:layout_height="75sp"
        android:layout_marginTop="200dp"
        android:background="@drawable/image_circle">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/voicegifImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/voice_gif"
            android:visibility="gone"/>

        <ImageView
            android:visibility="visible"
            android:id="@+id/VoiceSpeackVoice"
            android:src="@drawable/change_voice"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtvoiceresult"
        android:text="Your Voice Password"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>


    <ImageView
        android:id="@+id/imgbtnnext"
        android:src="@drawable/next_pressed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/imgbtnsave"
        android:src="@drawable/save_pressed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

</LinearLayout>
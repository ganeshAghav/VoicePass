<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@color/black">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <!--black bar-->
        <LinearLayout
            android:layout_weight="3.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/black"
            android:layout_gravity="center">

            <TextView
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:text="@string/actvielock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.SwitchCompat
                android:layout_weight="0.1"
                android:id="@+id/switch_locksetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"/>


        </LinearLayout>

        <!--voice lock pass lock-->
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center">


            <!--voice lock screen-->
            <TextView
                android:id="@+id/txtlockscreenlab"
                android:text="Voice Lock Screen"
                android:textAlignment="center"
                android:textSize="50sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:gravity="center">

                <!--voice lock-->
                <LinearLayout
                    android:id="@+id/linerVoice"
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="110dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/border">

                    <ImageView
                        android:src="@drawable/change_voice"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:textSize="10dp"
                        android:text="Voice Password"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"/>

                </LinearLayout>

                <!--password lock-->
                <LinearLayout
                    android:id="@+id/linerPassword"
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="110dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/border">

                    <ImageView
                        android:src="@drawable/change_keypad"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:textSize="10dp"
                        android:text="Keypad Password"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!--version-->
        <LinearLayout
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <TextView
                android:id="@+id/txtVersion"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

        </LinearLayout>

    </LinearLayout>


</ScrollView>
